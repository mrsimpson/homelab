{
  "name": "homelab",
  "version": "0.1.0",
  "private": true,
  "description": "Personal homelab infrastructure as code",
  "workspaces": [
    "packages/*",
    "packages/core/*",
    "packages/stacks/*",
    "packages/apps/*"
  ],
  "scripts": {
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "type-check": "tsc --noEmit",
    "preview": "pulumi preview",
    "up": "pulumi up",
    "destroy": "pulumi destroy",
    "bootstrap:firecracker-nodes": "sudo bash bootstrap/setup-firecracker-nodes.sh"
  },
  "keywords": [
    "pulumi",
    "kubernetes",
    "homelab",
    "infrastructure",
    "cloudflare-tunnel",
    "oauth2-proxy",
    "k3s"
  ],
  "author": "mrsimpson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrsimpson/homelab.git"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^24.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@mrsimpson/homelab-config": "*",
    "@mrsimpson/homelab-core-components": "*",
    "@mrsimpson/homelab-core-infrastructure": "*",
    "@mrsimpson/homelab-base-infra": "*",
    "@mrsimpson/homelab-app-hello-world": "*",
    "@pulumi/cloudflare": "^5.42.0",
    "@pulumi/kubernetes": "^4.18.3",
    "@pulumi/pulumi": "^3.137.0",
    "@pulumi/random": "^4.16.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "biome check --write --organize-imports-enabled=true",
      "tsc --noEmit"
    ]
  }
}
