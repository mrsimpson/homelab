{
  "name": "@mrsimpson/homelab-components",
  "version": "0.1.0",
  "description": "Reusable Pulumi components for secure homelab infrastructure",
  "main": "dist/components/index.js",
  "module": "dist/components/index.js",
  "types": "dist/components/index.d.ts",
  "files": [
    "dist/components/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "type-check": "tsc --noEmit",
    "preview": "pulumi preview",
    "up": "pulumi up",
    "destroy": "pulumi destroy",
    "prepare": "cd .. && husky install",
    "prepublishOnly": "npm run build && npm run lint && npm run type-check"
  },
  "keywords": [
    "pulumi",
    "kubernetes",
    "homelab",
    "infrastructure",
    "cloudflare-tunnel",
    "oauth2-proxy",
    "k3s"
  ],
  "author": "mrsimpson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrsimpson/homelab.git",
    "directory": "infrastructure"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^24.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@pulumi/cloudflare": "^5.42.0",
    "@pulumi/kubernetes": "^4.18.3",
    "@pulumi/pulumi": "^3.137.0",
    "@pulumi/random": "^4.16.0"
  },
  "lint-staged": {
    "infrastructure/src/**/*.{ts,tsx}": [
      "biome check --write --organize-imports-enabled=true",
      "tsc --noEmit"
    ]
  }
}
